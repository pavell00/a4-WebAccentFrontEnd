{
  "editor.fontSize": 15,
  "editor.detectIndentation": true,
  "editor.tabSize": 4,
  "vsicons.presets.angular": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/*.js.map": true,
    "**/*.js": {
        "when": "$(basename).ts"
    }
  }
}
